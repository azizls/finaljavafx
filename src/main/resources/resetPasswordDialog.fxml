<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<DialogPane prefHeight="200" prefWidth="300" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResetPasswordDialog">
    <content>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Entrez votre jeton de réinitialisation et votre nouveau mot de passe :" />
            <TextField fx:id="resetTokenField" promptText="Jeton de réinitialisation" />
            <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe" />
         <Button mnemonicParsing="false" onAction="#OK_DONE" text="Réinitialiser" />
         <Button mnemonicParsing="false" onAction="#CANCEL_CLOSE" text="Annuler" />
        </VBox>
    </content>
   
</DialogPane>
